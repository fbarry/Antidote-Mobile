<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1000dp"
    android:layout_height="245dp">

    <com.example.antidote_mobile.CardHandler
        android:id="@+id/cardHandlerWorkstation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:deck_left="70"
        app:deck_right="930"
        app:deck_top="210"
        app:draggable="false"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/whoseWorkstationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/player123456_s_workstation"
        android:textSize="23sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/confirmSyringeButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="316dp"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="true"
        android:background="#00FFFFFF"
        android:contentDescription="@string/InfoButtonDesc"
        android:cropToPadding="true"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/syringe_temp" />

</androidx.constraintlayout.widget.ConstraintLayout>